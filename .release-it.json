{
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tag": false,
    "push": true,
    "pushArgs": ["--follow-tags"],
    "requireBranch": "master"
  },
  "npm": {
    "publish": true,
    "skipChecks": false
  },
  "github": {
    "publish": true,
    "release": true,
    "releaseName": "Release v${version}"
  }
}
